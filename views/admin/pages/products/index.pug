extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/formSearch.pug

block main 
    h1 Product List
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            .row    
                .col-6
                    +filterStatus(filterStatus)
                .col-6
                    +formSearch(keyword)
        table.table.table-hover.table-sm 
                thead 
                    tr  
                        th STT  
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody   
                    each item, index in products
                        tr 
                            td #{index+1}
                            td 
                                img(src=item.thumbnail, alt="alt" width="100px" height="100px")
                            td #{item.title}
                            td #{item.price}
                            td 
                                if item.status === "inactive"
                                    a(href="#" class="badge badge-danger") Ngừng hoạt động  
                                else
                                    a(href="#" class="badge badge-success") Hoạt động
                            td 
                                button(class="btn btn-warning btn-sm") Sửa 
                                button(class="btn btn-danger btn-sm ml-1") Xoá  
    nav
        ul.pagination
            if objectPagination.currentPage > 1
                li.page-item
                    button(class="page-link" button-pagination= objectPagination.currentPage-1 ) Trang trước
            - for (let i = 1; i <= objectPagination.totalPage; i++)
                li.page-item
                    button(class="page-link" button-pagination=i)= i
            if objectPagination.currentPage < objectPagination.totalPage
                li.page-item
                    button(class="page-link" button-pagination= objectPagination.currentPage  + 1 ) Trang kế tiếp
            




